<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin"  >
		<f:Form id="DetalhePosicaoChange"
			editable="false">

			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanXL="4"
					labelSpanL="3"
					labelSpanM="4"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="0"
					emptySpanL="4"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="3"
					columnsL="3"
					columnsM="2"
                    columnsS="1"
					singleContainerFullSize="false" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer title="{i18n>posicao.dadosIniciais}">
					<f:formElements>
						<f:FormElement label="{i18n>posicao.precoEntrada}">
							<f:fields>
								<Input value="{PrecoEntrada}"  liveChange="inputFloat" change="checkFloat"/>
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="{i18n>posicao.valorInicial}">
							<f:fields>
								<Input value="{parts:[{path:'PrecoEntrada'},{path:'Quantidade'}], formatter:'.formataCalculoPreco'}" editable="false"  />
							</f:fields>
						</f:FormElement>


						<f:FormElement label="{i18n>posicao.dataEntrada}">
							<f:fields>
                                <DateTimePicker
                                displayFormat="short"  valueFormat="yyyy-MM-dd"
			value="{path:'DataEntrada', type:'sap.ui.model.type.DateTime'}"
			/>
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="{i18n>posicao.quantidade}">
							<f:fields>
								<Input value="{Quantidade}"  liveChange="inputNumeric"/>
							</f:fields>
						</f:FormElement>

					</f:formElements>
				</f:FormContainer>

                <f:FormContainer title="{i18n>posicao.dadosSituacao}">
					<f:formElements>
                        <f:FormElement label="{i18n>posicao.precoAtual}">
							<f:fields>
								<Input value="{path:'PrecoAtual', formatter:'.formatter.formataValor'}"  editable="false" />
							</f:fields>
						</f:FormElement>

						<f:FormElement label="{i18n>posicao.valorAtual}">
							<f:fields>
								<Input value="{parts:[{path:'PrecoAtual'},{path:'Quantidade'}], formatter:'.formataCalculoPreco'}" editable="false" />
							</f:fields>
						</f:FormElement>

                        <f:FormElement label="{i18n>posicao.diasPosicao}">
							<f:fields>
								<Input value="{path:'DataEntrada', formatter:'.formatter.calcDifDays'}"  editable="false"/>
							</f:fields>
						</f:FormElement>

                        <f:FormElement label="{i18n>posicao.valorDif}" >
                        <f:fields>
                            <Input value="{parts:[{path:'PrecoAtual'},{path:'Quantidade'},{path:'PrecoEntrada'}], formatter:'.formataCalculoValorDif'}"  editable="false" />
                        </f:fields>
						</f:FormElement>

						<f:FormElement label="{i18n>posicao.percDif}">
							<f:fields>
								<Input value="{parts:[{path:'PrecoAtual'},{path:'Quantidade'},{path:'PrecoEntrada'}], formatter:'.formataCalculoPercDif'}" editable="false" />
							</f:fields>
						</f:FormElement>

					</f:formElements>
				</f:FormContainer>

                <f:FormContainer title="{i18n>posicao.dadosStop}">
                    <f:formElements>
                        <f:FormElement label="{i18n>posicao.valorStopInicial}">
							<f:fields>
								<Input value="{PrecoStopInicial}"  liveChange="inputFloat" change="checkFloat" />
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="{i18n>posicao.valorStopAtual}">
							<f:fields>
								<Input value="{PrecoStopAtual}"  liveChange="inputFloat" change="checkFloat" />
							</f:fields>
						</f:FormElement>
                    </f:formElements>
                </f:FormContainer>

				<f:FormContainer title="{i18n>posicao.dadosRisco}">
					<f:formElements>
						<f:FormElement label="{i18n>posicao.quantidade}">
							<f:fields>
								<Text text="{Url}" />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Twitter account of the contact">
							<f:fields>
								<Text text="{Twitter}" />
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</VBox>
</core:FragmentDefinition>