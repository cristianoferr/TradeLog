<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin"  >
		<f:Form id="DetalhePosicaoChange"
			editable="false">

			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanXL="4"
					labelSpanL="3"
					labelSpanM="4"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="0"
					emptySpanL="4"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="2"
					columnsL="2"
					columnsM="2"
                    columnsS="1"
					singleContainerFullSize="false" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer title="{i18n>posicao.dadosGerais}">
					<f:formElements>
                        <f:FormElement label="{i18n>trade.qtdComprada}">
							<f:fields>
								<Input value="{QuantidadeComprada}"  editable="false"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>posicao.precoMedioCompra}">
							<f:fields>
								<Input value="{path:'PrecoMedioCompra', formatter:'.formatter.formataValor'}" editable="false" />
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="{i18n>trade.qtdVendida}">
							<f:fields>
								<Input value="{QuantidadeVendida}"  editable="false"/>
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="{i18n>posicao.precoMedioVenda}">
							<f:fields>
								<Input value="{path:'PrecoMedioVenda', formatter:'.formatter.formataValor'}" editable="false" />
							</f:fields>
						</f:FormElement>
                         <f:FormElement label="{i18n>posicao.quantidadeLiquida}">
							<f:fields>
								<Input value="{QuantidadeLiquida}"  editable="false"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>posicao.dataEntrada}">
							<f:fields>
								<Input value="{path:'DataEntrada', formatter:'.formatter.formataData'}"  editable="false"/>
							</f:fields>
						</f:FormElement>



					</f:formElements>
				</f:FormContainer>

                <f:FormContainer title="{i18n>posicao.dadosSituacao}">
					<f:formElements>
                        <f:FormElement label="{i18n>posicao.precoAtual}">
							<f:fields>
								<Input value="{path:'PrecoAtual', formatter:'.formatter.formataValor'}" editable="false"/>
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="{i18n>posicao.totalComprado}">
							<f:fields>
								<Input value="{path:'TotalComprado', formatter:'.formatter.formataValor'}" editable="false"/>
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="{i18n>posicao.totalVendido}">
							<f:fields>
								<Input value="{path:'TotalVendido', formatter:'.formatter.formataValor'}" editable="false" />
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="{i18n>posicao.valorEmPosse}">
							<f:fields>
								<Input value="{path:'ValorSaldo', formatter:'.formatter.formataValor'}" editable="false" />
							</f:fields>
						</f:FormElement>

						<f:FormElement label="{i18n>posicao.situacaoAtual}">
							<f:fields>
								<Input value="{path:'ValorPosicaoAtual', formatter:'.formatter.formataValor'}" editable="false" />
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="{i18n>posicao.diasPosicao}">
							<f:fields>
								<Input value="{path:'DataEntrada', formatter:'.formatter.calcDifDays'}"  editable="false" />
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="{i18n>posicao.valorDif}">
                        <f:fields>
                            <Input value="{path:'DiferencaAtual', formatter:'.formatter.formataValor'}" editable="false" />
                        </f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>posicao.percDif}">
							<f:fields>
								<Input value="{parts:[{path:'ValorPosicaoAtual'},{path:'PrecoAtual'},{path:'DiferencaAtual'}], formatter:'.formataCalculoPercDif'}" editable="false" />
							</f:fields>
						</f:FormElement>

					</f:formElements>
				</f:FormContainer>

                <f:FormContainer title="{i18n>posicao.dadosStop}">
                    <f:formElements>
                        <f:FormElement label="{i18n>posicao.valorStopInicial}">
                            <f:fields>
                                <Input value="{path:'PrecoStopInicial', formatter:'.formatter.formataValor'}"   editable="false" />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>posicao.precoStopAtual}">
                            <f:fields>
                                <Input value="{PrecoStopAtual}" liveChange="inputFloat" change="checkFloat"/>
                            </f:fields>
                        </f:FormElement>
                          <f:FormElement label="{i18n>posicao.precoStopAtual}">
                            <f:fields>
                                <Input value="{parts:[{path:'PrecoStopAtual'},{path:'QuantidadeLiquida'}], formatter:'.formataCalculoPreco'}"   editable="false" />
                            </f:fields>
                        </f:FormElement>
						<f:FormElement label="{i18n>posicao.capitalSobRisco}">
							<f:fields>
								<Input value="{parts:[{path:'PrecoAtual'},{path:'DiferencaAtual'},{path:'PrecoStopAtual'}], formatter:'.formataCalculoValorDif'}" editable="false"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>posicao.percSobRisco}">
							<f:fields>
								<Input value="{parts:[{path:'PrecoAtual'},{path:'DiferencaAtual'},{path:'PrecoStopAtual'},{path:'PrecoMedioCompra'}], formatter:'.formataCalculoValorPercDif'}" editable="false" />
							</f:fields>
						</f:FormElement>
                    </f:formElements>
                </f:FormContainer>
			</f:formContainers>
		</f:Form>
	</VBox>
</core:FragmentDefinition>