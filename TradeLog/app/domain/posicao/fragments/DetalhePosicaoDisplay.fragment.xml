<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin"  >
		<f:Form id="DetalhePosicaoDisplay"
			editable="false">

			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanXL="6"
					labelSpanL="4"
					labelSpanM="6"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="0"
					emptySpanL="4"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="3"
					columnsL="3"
					columnsM="2"
                    columnsS="1"
					singleContainerFullSize="false" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer title="{i18n>posicao.dadosGerais}">
					<f:formElements>
                        <f:FormElement label="QuantidadeComprada">
							<f:fields>
								<ObjectNumber number="{QuantidadeComprada}" />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="PrecoMedioCompra">
							<f:fields>
								<ObjectNumber number="{path:'PrecoMedioCompra', formatter:'.formatter.formataValor'}" unit="$" />
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="QuantidadeVendida">
							<f:fields>
								<ObjectNumber number="{QuantidadeVendida}" />
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="PrecoMedioVenda">
							<f:fields>
								<ObjectNumber number="{path:'PrecoMedioVenda', formatter:'.formatter.formataValor'}" unit="$" />
							</f:fields>
						</f:FormElement>
                         <f:FormElement label="QuantidadeLiquida">
							<f:fields>
								<ObjectNumber number="{QuantidadeLiquida}" />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>posicao.dataEntrada}">
							<f:fields>
								<Text text="{path:'DataEntrada', formatter:'.formatter.formataData'}" />
							</f:fields>
						</f:FormElement>



					</f:formElements>
				</f:FormContainer>

                <f:FormContainer title="{i18n>posicao.dadosSituacao}">
					<f:formElements>
                        <f:FormElement label="{i18n>posicao.precoAtual}">
							<f:fields>
								<ObjectNumber number="{path:'PrecoAtual', formatter:'.formatter.formataValor'}" unit="$"/>
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="{i18n>posicao.totalComprado}">
							<f:fields>
								<ObjectNumber number="{path:'TotalComprado', formatter:'.formatter.formataValor'}" unit="$"/>
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="{i18n>posicao.totalVendido}">
							<f:fields>
								<ObjectNumber number="{path:'TotalVendido', formatter:'.formatter.formataValor'}" unit="$" />
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="{i18n>posicao.valorEmPosse}">
							<f:fields>
								<ObjectNumber number="{path:'ValorLiquido', formatter:'.formatter.formataValor'}" unit="$" />
							</f:fields>
						</f:FormElement>

						<f:FormElement label="{i18n>posicao.situacaoAtual}">
							<f:fields>
								<ObjectNumber number="{path:'ValorPosicaoAtual', formatter:'.formatter.formataValor'}" unit="$" />
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="{i18n>posicao.diasPosicao}">
							<f:fields>
								<Text text="{path:'DataEntrada', formatter:'.formatter.calcDifDays'}" />
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="{i18n>posicao.valorDif}">
                        <f:fields>
                            <ObjectNumber number="{path:'DiferencaAtual', formatter:'.formatter.formataValor'}" unit="$" />
                        </f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>posicao.percDif}">
							<f:fields>
								<ObjectNumber number="{parts:[{path:'ValorPosicaoAtual'},{path:'DiferencaAtual'}], formatter:'.formataCalculoPercDif'}" unit="%" />
							</f:fields>
						</f:FormElement>

					</f:formElements>
				</f:FormContainer>

                <f:FormContainer title="{i18n>posicao.dadosStop}">
                    <f:formElements>
                        <f:FormElement label="{i18n>posicao.valorStopInicial}">
                            <f:fields>
                                <Text text="{path:'PrecoStopInicial', formatter:'.formatter.formataValor'}"  />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>posicao.valorStopAtual}">
                            <f:fields>
                                <Text text="{path:'PrecoStopAtual', formatter:'.formatter.formataValor'}"  />
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>

				<f:FormContainer title="{i18n>posicao.dadosRisco}">
					<f:formElements>
						<f:FormElement label="{i18n>posicao.quantidade}">
							<f:fields>
								<Text text="{Url}" />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Twitter account of the contact">
							<f:fields>
								<Text text="{Twitter}" />
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</VBox>
</core:FragmentDefinition>